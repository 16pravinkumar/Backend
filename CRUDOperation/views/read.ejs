<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="Styles/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10">
      <a href="/" class="text-blue-600">&larr; Back to home</a>
      <h1 class="text-white text-4xl my-5">All users</h1>
      <div class="users flex gap-4 flex-wrap">
        <% if(users.length > 0 ) {%> <% users.forEach((user) => { %>

        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
            <img
              class="w-full h-full object-cover rounded-lg hover:scale-110 transition ease-in-out duration-300 object-top"
              src="<%= user.imgUrl %>"
              alt="<%= user.name %>"
            />
          </div>
          <h3 class="text-xl mt-3 trcking-tighter"><%= user.name %></h3>
          <h5 class="text-sm trcking-tighter text-zinc-500">
            <%= user.email %>
          </h5>

          <div class="flex gap-3 mt-6">
            <a class="text-yellow-500" href="/edit/<%= user._id %>">Edit User</a>
            <a class="text-red-500" href="/read/<%= user._id %>">Delete User</a>
          </div>
        </div>
        <% }); %> <% } else { %>
        <h2
          class="flex justify-center item-center w-full gap-2 font-bold text-3xl"
        >
          "No <span class="text-green-400">users</span> found."
        </h2>
        <% } %>
      </div>
    </div>

    <script src="/Js/app.js"></script>
  </body>
</html>
