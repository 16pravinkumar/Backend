<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styleFolder/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            name="title"
            type="text"
            placeholder="Enter your title"
            class="block px-5 py-2 bg-zinc-700 w-full rounded-lg outline-none border-none placeholder:text-white text-white focus:ring-2 font tracking-wide"
          />
          <textarea
            name="details"
            id=""
            placeholder="Write your task"
            class="block mt-5 px-5 py-2 resize-none bg-zinc-700 w-full rounded-lg outline-none border-none placeholder:text-white text-white focus:ring-2 font tracking-wide"
          ></textarea>
          <input
            type="submit"
            value="Create task"
            id=""
            class="mt-5 ring-2 text-white rounded-md p-3 hover:bg-blue-500 cursor-pointer border-none font"
          />
        </form>
      </div>

      <div class="tasks p-10 gap-4 flex flex-wrap w-full">
        <% if (files.length > 0) { %> <% files.forEach((file) => { %>
        <div class="task w-72 px-3 py-4 bg-zinc-700 rounded-lg">
          <h1 class="text-white text-3xl font tracking-normal break-words">
            <%= file%>
          </h1>

          <div class="flex justify-between items-center w-full mt-4">
            <a
              href="/file/<%= file %>"
              class="text-blue-500 text-sm font tracking-normal"
              >Read More...</a
            >

            <div class="mr-4">
              <a class="text-yellow-400 mr-3" href="/edit/<%= file %>">Edit</a>
              <a class="text-red-500" href="/delete/<%= file %>">Delete</a>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h2 class="text-white font text-2xl text-center w-full">
          "No tasks found"
        </h2>
        <% } %>
      </div>
    </div>

    <script src="/jsFolder/app.js"></script>
  </body>
</html>
